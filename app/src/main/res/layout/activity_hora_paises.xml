<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoraPaises">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#b1adad"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="#060606"
            android:text="A hora atual nos seguintes países é:"
            android:textAlignment="center"
            android:textColor="#ffffffff"
            android:textSize="34dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="157dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="117dp"
        app:srcCompat="@drawable/franca" />

    <TextView
        android:id="@+id/txtFranca"
        android:layout_width="178dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView7"
        android:text="David"
        android:textAlignment="center"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="157dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginBottom="178dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/china" />

    <TextView
        android:id="@+id/txtChina"
        android:layout_width="179dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:text="Santos"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="157dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginBottom="44dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/africa"/>

    <TextView
        android:id="@+id/txtAfrica"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:text="Aurelio"
        android:textAlignment="center"
        android:textSize="50dp" />

</RelativeLayout>