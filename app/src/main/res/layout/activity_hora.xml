<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    tools:context=".Hora">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ff000000"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:text="Selecione a hora atual" />

    <Button
        android:id="@+id/bAH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="145dp"
        android:text="^" />

    <Button
        android:id="@+id/bAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bAH"
        android:layout_marginEnd="84dp"
        android:text="^" />

    <Button
        android:id="@+id/bDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bAH"
        android:layout_marginBottom="136dp"
        android:text="-" />

    <Button
        android:id="@+id/bDM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bAM"
        android:layout_alignTop="@+id/bDH"
        android:text="-" />

    <TextView
        android:id="@+id/txtHora"
        android:layout_width="94dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/bAH"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="00" />

    <TextView
        android:id="@+id/txtPonto"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="177dp"
        android:text=":"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtMinuto"
        android:layout_width="83dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/bAM"
        android:layout_toEndOf="@+id/txtPonto"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="00" />

    <TextView
        android:id="@+id/txtperiodo"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/txtPonto"
        android:layout_toEndOf="@+id/txtMinuto"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="PM" />
</RelativeLayout>